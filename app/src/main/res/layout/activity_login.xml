<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.LoginActivity">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#333333"
            tools:layout_editor_absoluteX="87dp"
            tools:layout_editor_absoluteY="0dp">

            <!-- Imagen del perro en la parte superior derecha -->

            <!-- Título "DogApp" -->


            <!-- Imagen dinámica de la huella digital en la parte inferior central -->

            <ImageView
                android:id="@+id/LoginImage"
                android:layout_width="269dp"
                android:layout_height="391dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="155dp"

                android:layout_marginEnd="5dp"
                android:layout_marginBottom="337dp"
                android:src="@drawable/doghome"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvTitleLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="80dp"
                android:layout_marginTop="277dp"
                android:layout_marginEnd="89dp"
                android:layout_marginBottom="360dp"
                android:fontFamily="@font/lilita_one"
                android:padding="20dp"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="50dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animacionHuella"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_below="@+id/tvTitleLogin"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="110dp"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="110dp"
                android:layout_marginBottom="70dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true" />
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>