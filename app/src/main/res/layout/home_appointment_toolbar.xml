<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:context=".view.MainActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/home_toolbar_background_curved"
            app:theme="@style/ToolbarTheme">


            <TextView
                android:id="@+id/toolbarTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_home_manager"
                android:textAppearance="@style/ToolbarHomeTitleStyle"
                android:layout_gravity="left"
                android:gravity="center" />



        </androidx.appcompat.widget.Toolbar>


        <ImageView
            android:id="@+id/logout_btn"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="16dp"
            android:layout_gravity="end"
            android:src="@drawable/doghome"
            android:layout_marginEnd="10dp"
            app:layout_anchor="@id/toolbar"
            app:layout_anchorGravity="end|center_vertical" />

        <TextView
            android:id="@+id/toolbarAppTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_home_dog_app"
            android:layout_marginTop="140dp"
            android:layout_marginEnd="16dp"
            android:layout_gravity="end"
            android:textAppearance="@style/ToolbarHomeAppTitleStyle"
            android:gravity="center" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
